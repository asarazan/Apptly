<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

        <ImageView
            android:id="@+id/stream_item_portrait"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_margin="5dp"
            android:contentDescription="This is a portrait"
            android:src="@drawable/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/stream_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/stream_item_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This is the content of the twoot and I think that&apos;s pretty cool"
                android:textAppearance="?android:attr/textAppearanceSmall" />
        </LinearLayout>

</LinearLayout>